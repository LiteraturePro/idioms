            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/fragment_main_bg3"
                android:layout_height="210dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:background="@drawable/fragment_main_bg5"
                    android:layout_height="90dp">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="30dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_marginTop="5dp"
                                android:layout_marginStart="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="中华成语词典 (30862个)"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="#000000">
                            </TextView>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="60dp"
                            android:layout_marginEnd="10dp"
                            android:layout_height="match_parent">
                            <Button
                                android:id="@+id/words"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="查看词表"
                                android:textSize="8sp">

                            </Button>

                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="15dp">
                        <TextView
                            android:id="@+id/studyset"
                            android:layout_marginStart="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="学习设置"
                            android:textSize="12sp"
                            android:textColor="#000000">

                        </TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="15dp">
                        <TextView
                            android:id="@+id/word_do"
                            android:layout_marginStart="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="已完成 12.5%"
                            android:textSize="10sp"
                            android:textColor="#000000">

                        </TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="15dp"
                        android:layout_height="15dp">
                        <ProgressBar
                            android:id="@+id/progress_bar_healthy"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:layout_gravity="center"
                            android:max="100"
                            android:progress="20"
                            android:progressDrawable="@drawable/fragment_main_progressbar_bg"
                            />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="15dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="已完成离线"
                            android:textSize="10sp">

                        </TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="45dp">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="60dp"
                            android:layout_marginStart="40dp"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:textSize="12sp"
                                android:textColor="#000000"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:text="新词">

                            </TextView>
                            <TextView
                                android:id="@+id/word_study"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textSize="10sp"
                                android:gravity="center"
                                android:textColor="#000000"
                                android:text="20">

                            </TextView>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                android:textColor="#000000"
                                android:gravity="center"
                                android:text="复习">

                            </TextView>
                            <TextView
                                android:id="@+id/word_fuxi"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textSize="10sp"
                                android:gravity="center"
                                android:textColor="#000000"
                                android:text="20">

                            </TextView>

                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="60dp"
                            android:layout_marginEnd="40dp"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:textSize="12sp"
                                android:textColor="#000000"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:text="未学">

                            </TextView>
                            <TextView
                                android:id="@+id/word_no"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textSize="10sp"
                                android:gravity="center"
                                android:textColor="#000000"
                                android:text="2000">
                            </TextView>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/study"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="100dp"
                        android:text="开始学习"
                        android:layout_height="40dp">

                    </Button>
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:background="@drawable/fragment_main_bg4"
                android:layout_height="80dp">
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginStart="15dp"
                        android:text="成语接龙"
                        android:gravity="left"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:textStyle="bold">

                    </TextView>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="多种游戏模式，让成语记忆更牢固"
                        android:gravity="left"
                        android:textSize="12sp">
                    </TextView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/game1"
                        android:layout_marginTop="12dp"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:textSize="12sp"
                        android:text="开始游戏">
                    </Button>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:background="@drawable/fragment_main_bg4"
                android:layout_height="80dp">
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginStart="15dp"
                        android:text="文字猜谜语"
                        android:gravity="left"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:textStyle="bold">

                    </TextView>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="根据文字提示，猜出相关成语"
                        android:gravity="left"
                        android:textSize="12sp">
                    </TextView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/game2"
                        android:layout_marginTop="12dp"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:textSize="12sp"
                        android:text="开始游戏">
                    </Button>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:background="@drawable/fragment_main_bg4"
                android:layout_height="80dp">
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginStart="15dp"
                        android:text="看图猜成语"
                        android:gravity="left"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:textStyle="bold">

                    </TextView>
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="根据图片提示，猜出相关成语"
                        android:gravity="left"
                        android:textSize="12sp">
                    </TextView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/game3"
                        android:layout_marginTop="12dp"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:textSize="12sp"
                        android:text="开始游戏">
                    </Button>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:background="@drawable/fragment_main_bg4"
                android:layout_height="80dp">
                <TextView
                    android:id="@+id/couplet"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginStart="15dp"
                    android:text="成语对联"
                    android:gravity="left"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:textStyle="bold">

                </TextView>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="成语对联是指含有寓意吉祥的成语的对联，代表着主人家的文化内涵，心理层次，能量气场和富贵如意。"
                    android:gravity="left"
                    android:textSize="10sp">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:background="@drawable/fragment_main_bg4"
                android:layout_height="80dp">
                <TextView
                    android:id="@+id/fun"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginStart="15dp"
                    android:text="有趣的成语"
                    android:gravity="left"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:textStyle="bold">

                </TextView>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="其中包含有成语之最、数词成语，动物成语、5到8字成语"
                    android:gravity="left"
                    android:textSize="10sp">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_width="match_parent"
                android:background="@drawable/fragment_main_bg4"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/news"
                        android:layout_width="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_height="match_parent"
                        android:text="全国教育工作会议召开，传递这些重要信息！"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        android:textStyle="bold">
                    </TextView>

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/new_text"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_marginStart="10dp"
                            android:layout_height="60dp"
                            android:text="1月7日至8日，2021年全国教育工作会议在京召开。会议强调，要..."
                            android:textSize="12sp">

                        </TextView>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/new_time"
                                android:layout_marginTop="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="12dp"
                                android:layout_marginStart="10dp"
                                android:text="2022-02-26 08:56:00"
                                android:textSize="10sp">

                            </TextView>
                            <TextView
                                android:id="@+id/new_src"
                                android:layout_marginTop="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="12dp"
                                android:layout_marginStart="50dp"
                                android:text="来源: 北京日报客户端"
                                android:textSize="10sp">

                            </TextView>

                        </LinearLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginEnd="20dp"
                        android:layout_width="100dp"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/new_img"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="70dp">

                        </ImageView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="20dp">

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</FrameLayout>