<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e7eded">
    <include
        android:id="@+id/include"
        layout="@layout/fragment_me_topbar"
        android:layout_height="50dp"
        android:layout_width="match_parent" />
    <LinearLayout
        android:id="@+id/yijian_linerar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10sp"
        android:background="#e7eded">
        <ScrollView
            android:id="@+id/ScrollView2"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp" >
            <TableRow
                android:id="@+id/TableRowContent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#fff">

                <EditText
                    android:id="@+id/et_advice_content"
                    android:layout_width="match_parent"
                    android:background="#00FFFFFF"
                    android:hint="请详细描述您的问题，以便我们更好为您服务"
                    android:layout_height="150dp"
                    android:layout_span="10000"
                    android:gravity="top|left"
                    android:textSize="15sp">
                </EditText>
            </TableRow>
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#e7eded">
        <Button
            android:id="@+id/put"
            android:textColor="#ffffff"
            android:background="@drawable/fragement_me_feedback_btn_bg"
            android:layout_marginLeft="80.0dip"
            android:layout_marginRight="80.0dip"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textStyle="bold"
            android:text="提交反馈">
        </Button>
    </LinearLayout>

</LinearLayout>