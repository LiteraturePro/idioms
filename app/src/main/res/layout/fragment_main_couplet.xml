<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#e7eded"
    android:layout_height="match_parent"
    tools:context=".navigation.main.Main_couplet">
    <include
        android:id="@+id/include"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        layout="@layout/fragment_me_topbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

    </LinearLayout>
    <ViewFlipper
        android:id="@+id/viewFlipper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoStart="false"
        android:flipInterval="3000">
        <!--android:inAnimation="@anim/left_in"-->
        <!--android:outAnimation="@anim/right_out"-->
<!--        <include layout="@layout/fragment_main_couplet_item" />-->
    </ViewFlipper>


    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="     成语对联就是把寓意吉祥的成语设计在对联里，代表着主人家的文化内涵，心理层次，能量气场和富贵如意。成语是中国传统文化的精髓，有着丰富的典故或意义。"
                android:textSize="18sp"
                android:textStyle="bold">

            </TextView>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>